<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GovMain">

    <Button
        android:id="@+id/button5"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/textView6"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_design"
        android:fontFamily="@font/hel"
        android:paddingStart="10dp"
        android:text="Companies"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/button5"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_design"
        android:fontFamily="@font/hel"
        android:paddingStart="10dp"
        android:text="Sponsors"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/contact_company"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/textView7"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_design"
        android:fontFamily="@font/hel"
        android:paddingStart="10dp"
        android:text="Government"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:onClick="contact"/>

    <Button
        android:id="@+id/contact_sponsor"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/contact_company"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_design"
        android:fontFamily="@font/hel"
        android:paddingStart="10dp"
        android:text="Sponsor"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:onClick="contact"/>

    <Button
        android:id="@+id/search_company"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/textView8"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_design"
        android:fontFamily="@font/hel"
        android:paddingStart="10dp"
        android:text="Company"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:onClick="search"
        />

    <Button
        android:id="@+id/search_sponsor"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/search_company"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_design"
        android:fontFamily="@font/hel"
        android:paddingStart="10dp"
        android:text="Sponsor"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:onClick="search"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/back_icon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:text="Government"
        android:fontFamily="@font/hel"
        android:textSize="30sp"
        android:textColor="#E19E08"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review requests:"
        android:layout_alignParentStart="true"
        android:layout_below="@id/imageButton"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Communicate with:"
        android:layout_alignParentStart="true"
        android:layout_below="@id/button6"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for:"
        android:layout_alignParentStart="true"
        android:layout_below="@id/contact_sponsor"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New announcement"
        android:layout_below="@id/search_sponsor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:fontFamily="@font/hel"
        android:textSize="15sp"
        android:onClick="announce"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_sponsor"
        android:layout_marginStart="7dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@id/textView9"
        android:text="+"
        android:textColor="#E19E08"
        android:textSize="30sp" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-30dp"
        android:scaleType="fitEnd"
        app:srcCompat="@mipmap/government_background" />
</RelativeLayout>