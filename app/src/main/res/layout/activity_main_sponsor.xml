<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SponsorMain">

    <TextView
        android:id="@+id/sponsor_name"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_margin="20sp"
        android:gravity="center"
        android:text="Sponsor name " />

    <Button
        android:id="@+id/button5"
        android:layout_margin="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sponsor_name"
        android:text="Search for a company"/>

    <Button
        android:id="@+id/button6"
        android:layout_margin="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button5"
        android:text="Contact a company" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button6"
        android:layout_margin="20px"
        android:text="Contact Government" />
    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button7"
        android:layout_margin="20px"
        android:text="See government ads" />
    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button8"
        android:layout_margin="20px"
        android:text="Search for company" />
</RelativeLayout>