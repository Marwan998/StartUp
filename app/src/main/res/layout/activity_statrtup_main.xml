<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartupMain">


    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50px"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/profile_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageButton4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:text="StartUp"
        android:fontFamily="@font/hel"
        android:textSize="30sp"
        android:textColor="#E19E08"/>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:onClick="back"
        app:srcCompat="@mipmap/back_icon" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Communicate with:"
        android:layout_alignParentStart="true"
        android:layout_below="@id/imageButton4"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/button10"
        android:tag="gov"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/textView2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_design"
        android:fontFamily="@font/hel"
        android:onClick="contact"
        android:paddingStart="10dp"
        android:text="Government"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button11"
        android:tag="spn"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/button10"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_design"
        android:text="Sponsors"
        android:fontFamily="@font/hel"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:onClick="contact"
        android:paddingStart="10dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/button11"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:text="Government info:"
        android:textSize="22sp"/>
    <Button
        android:id="@+id/button12"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/textView3"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_design"
        android:text="Government Ads"
        android:fontFamily="@font/hel"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:onClick="ads"
        android:paddingStart="10dp"/>
    <Button
        android:id="@+id/button13"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/button12"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_design"
        android:text="Government Transactions"
        android:fontFamily="@font/hel"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:onClick="transactions"
        android:paddingStart="10dp"/>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Financial Support"
        android:layout_below="@id/button13"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:fontFamily="@font/hel"
        android:textSize="15sp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/textView4"
        android:layout_below="@id/button13"
        android:layout_marginTop="25dp"
        android:layout_marginStart="7dp"
        android:src="@mipmap/financial_support_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-30dp"
        android:scaleType="fitEnd"
        app:srcCompat="@mipmap/startups_background" />

</RelativeLayout>